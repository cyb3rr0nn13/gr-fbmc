<block>
  <name>Channel Estimator</name>
  <key>fbmc_channel_estimator_vcvc</key>
  <category>FBMC</category>
  <import>import fbmc</import>
  <make>fbmc.channel_estimator_vcvc($frame_len, $subcarriers, $taps, $pilot_amp, $pilot_timestep, $pilot_carriers)</make>
  <param>
    <name>Symbols per frame</name>
    <key>frame_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Input subcarriers (N*o*b)</name>
    <key>subcarriers</key>
    <type>int</type>
  </param>
  <param>
    <name>Prototype taps</name>
    <key>taps</key>
    <type>real_vector</type>
  </param>
  <param>
    <name>Pilot amplitude</name>
    <key>pilot_amp</key>
    <type>float</type>
  </param>
  <param>
    <name>Pilot timestep</name>
    <key>pilot_timestep</key>
    <type>int</type>
  </param>
  <param>
    <name>Pilot carriers</name>
    <key>pilot_carriers</key>
    <type>int_vector</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$subcarriers</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$subcarriers</vlen>
  </source>
</block>
