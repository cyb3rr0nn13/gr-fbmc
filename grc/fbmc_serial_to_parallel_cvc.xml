<block>
  <name>Serial to parallel with padding</name>
  <key>fbmc_serial_to_parallel_cvc</key>
  <category>FBMC</category>
  <import>import fbmc</import>
  <make>fbmc.serial_to_parallel_cvc($len_in, $vlen_out)</make>
  <param>
    <name>Input stream length</name>
    <key>len_in</key>
    <type>int</type>
  </param>
  <param>
    <name>Output vector length</name>
    <key>vlen_out</key>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$vlen_out</vlen>
  </source>
</block>
