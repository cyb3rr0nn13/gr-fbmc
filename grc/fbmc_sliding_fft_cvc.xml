<block>
  <name>Sliding FFT</name>
  <key>fbmc_sliding_fft_cvc</key>
  <category>FBMC</category>
  <import>import fbmc</import>
  <make>fbmc.sliding_fft_cvc($subcarriers, $overlap, $bands)</make>
  <param>
    <name>Subcarriers per Subband</name>
    <key>subcarriers</key>
    <type>int</type>
  </param>
  <param>
    <name>Overlap factor</name>
    <key>overlap</key>
    <type>int</type>
  </param>
  <param>
    <name>Subbands</name>
    <key>bands</key>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$subcarriers * $overlap * $bands</vlen>
  </source>
</block>
