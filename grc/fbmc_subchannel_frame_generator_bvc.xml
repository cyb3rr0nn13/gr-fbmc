<block>
  <name>Subchannel Frame Generator</name>
  <key>fbmc_subchannel_frame_generator_bvc</key>
  <category>FBMC</category>
  <import>import fbmc</import>
  <make>fbmc.subchannel_frame_generator_bvc($subcarriers, $payload_bits, $overlap, $preamble_symbols, $pilot_amp, $pilot_timestep, $pilot_carriers)</make>
  <param>
    <name>Subcarriers</name>
    <key>subcarriers</key>
    <type>int</type>
  </param>
  <param>
    <name>Payload bits</name>
    <key>payload_bits</key>
    <type>int</type>
  </param>
  <param>
    <name>Overlap</name>
    <key>overlap</key>
    <type>int</type>
  </param>
  <param>
    <name>Preamble_symbols</name>
    <key>preamble_symbols</key>
    <type>complex_vector</type>
  </param>
  <param>
    <name>Pilot_amp</name>
    <key>pilot_amp</key>
    <type>float</type>
  </param>
  <param>
    <name>Pilot_timestep</name>
    <key>pilot_timestep</key>
    <type>int</type>
  </param>
  <param>
    <name>Pilot_carriers</name>
    <key>pilot_carriers</key>
    <type>int_vector</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$subcarriers</vlen>
  </source>
</block>
